<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Filtering</category>
  <title>ShapeBasedInterpolation</title>
  <description>none</description>
  <version>0.1</version>
  <documentation-url>http://www.slicer.org/slicerWiki/index.php/Modules:ResampleVolume-Documentation-3.6</documentation-url>
  <license>none</license>
  <contributor>Andrey Fedorov</contributor>
<acknowledgements>none</acknowledgements>

  <parameters>
    <label>Resampling Parameters</label>
    <description>Parameters used for resampling</description>

    <float>
      <name>sliceThicknessReductionConst</name>
      <longflag>sliceThicknessReductionConst</longflag>
      <description>How much the slice thickness should be reduced in the output image</description>
      <label>Slicer thickness const</label>
      <default>0.5</default>
    </float>

  <string-enumeration>
      <name>interpolationType</name>
      <flag>-i</flag>
      <longflag>--interpolation</longflag>
      <description>Sampling algorithm</description>
      <label>Interpolation</label>
      <element>linear</element>
      <element>nearestNeighbor</element>
      <element>bspline</element>
      <element>hamming</element>
      <element>cosine</element>'
      <element>welch</element>
      <element>lanczos</element>'
      <element>blackman</element>
      <default>linear</default>
  </string-enumeration>
  </parameters>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>InputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input label volume to be resampled</description>
    </image>
    
    <integer>
      <name>inputLabelID</name>
      <label>Input Label ID</label>
      <channel>input</channel>
      <longflag>--inputLabel</longflag>
      <description>Which label should be interpolated</description>
      <default>-1</default>
    </integer>

    <image type="label">
      <name>OutputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Resampled Volume</description>
    </image>    
  </parameters>
</executable>
