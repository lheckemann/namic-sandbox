#ifndef _cisstConfig_h
#define _cisstConfig_h

#define ON 1
#define OFF 0

// Path to build root (to find some configuration files)
#define CISST_BUILD_ROOT "@CISST_BINARY_DIR@"

// Path to build files
#define CISST_BUILD_LINK_DIRECTORIES "@CISST_BUILD_LINK_DIRECTORIES@"

// cnetlib, erc-cisst distribution of code from netlib.org
#define CISST_HAS_CNETLIB @CISST_HAS_CNETLIB@

// LAPACK3E, erc-cisst distribution of code from netlib.org
#define CISST_HAS_CISSTNETLIB @CISST_HAS_CISSTNETLIB@

// RTAI Realtime extension for Linux
#define CISST_HAS_LINUX_RTAI @CISST_HAS_LINUX_RTAI@

// ServoToGo card
#define CISST_HAS_STG @CISST_HAS_STG@

// ServoToGo card with Windows Driver
#define CISST_HAS_WINSTG @CISST_HAS_WINSTG@

// JHU LoPoMoCo card 
#define CISST_HAS_LOPOMOCO @CISST_HAS_LOPOMOCO@

// Motion Engineering Inc. card
#define CISST_HAS_MEI @CISST_HAS_MEI@

// NiDAQ based ATI Force/Torque sensor
#define CISST_HAS_ATIDAQFT @CISST_HAS_ATIDAQFT@

// ISA ATI Force/Torque sensor
#define CISST_HAS_ATIISAFT @CISST_HAS_ATIISAFT@


#endif // _cisstConfig_h


