@set CISST_DIR=${cisst_BINARY_DIR}
@set CMAKE_GENERATOR=${CMAKE_GENERATOR}
@set BUILD_TESTS=${BUILD_TESTS}
@set BUILD_EXAMPLES=${BUILD_EXAMPLES}

@if "%CMAKE_GENERATOR%" == "NMake Makefiles" goto nmake
@goto visual


:visual
@if (%1) == () goto usage
@set CISST_INTDIR=%1
@goto setpath


:nmake
@set CISST_INTDIR="."
@goto setpath


:setpath
@echo Setting environment variables for the cisst package

@set PATH=%CISST_DIR%/bin/%CISST_INTDIR%;%CISST_DIR%/lib/%CISST_INTDIR%;%PATH%
@set PYTHONPATH=%CISST_DIR%/lib;%CISST_DIR%/lib/%CISST_INTDIR%;%PYTHONPATH%

@if "%BUILD_TESTS%" == "ON" set PATH=%CISST_DIR%/tests/bin/%CISST_INTDIR%;%CISST_DIR%/tests/lib/%CISST_INTDIR%;%PATH%
@if "%BUILD_TESTS%" == "ON" set PYTHONPATH=%CISST_DIR%/tests/lib/%CISST_INTDIR%;%CISST_DIR%/tests/lib;%PYTHONPATH%

@if "%BUILD_EXAMPLES%" == "ON" set PATH=%CISST_DIR%/examples/bin/%CISST_INTDIR%;%CISST_DIR%/examples/lib/%CISST_INTDIR%;%PATH%
@if "%BUILD_EXAMPLES%" == "ON" set PYTHONPATH=%CISST_DIR%/examples/lib/%CISST_INTDIR%;%CISST_DIR%/examples/lib;%PYTHONPATH%

@goto end


:usage
@echo "Usage: %0 {Debug|Release}"
@goto end

:end


