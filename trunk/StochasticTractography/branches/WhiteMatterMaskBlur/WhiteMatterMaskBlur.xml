<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>filtering</category>
  <title>White Matter Mask Blur</title>
  <description>
  Blurs the edges of the white matter mask without affecting the interior values.
  </description>
  <version>1.0</version>
  <license></license>
  <contributor>Tri Ngo</contributor>

  <parameters>
    <label>
    WhiteMatterMaskBlur Parameters
    </label>
    <description>
    Parameters for WhiteMatterMaskBlur program
    </description>

    <integer>
      <name>totalthreads</name>
      <flag>j</flag>
      <longflag>totalthreads</longflag>
      <description>Total number of threads to use.  Default value of zero sets number of threads to number of CPUs</description>
      <label>Total Threads</label>
      <default>0</default>
      <constraints>
        <minimum>0</minimum>
        <step>1</step>
      </constraints>
    </integer>
    <integer>
      <name>threshold</name>
      <flag>t</flag>
      <longflag>threshold</longflag>
      <description>Bluring cuttoff distance</description>
      <label>Threshold</label>
      <default>2</default>
      <constraints>
        <minimum>0</minimum>
        <step>1</step>
      </constraints>
    </integer>
  </parameters>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>whitemattermaskfilename</name>
      <label>Input White Matter Mask</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input White Matter Mask Image</description>
    </image>
    <image>
      <name>blurredwhitemattermaskfilename</name>
      <label>Output Blurred White Matter Mask</label>
      <channel>output</channel>
      <index>1</index>
      <description>Blurred White Matter Mask Image</description>
    </image>
  </parameters>

</executable>
