#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.59)

AC_INIT(cli4cpp, 0.2, john.poplett AT acm.org)
AC_CONFIG_SRCDIR([src/Option.cpp])
AM_INIT_AUTOMAKE

#AC_CONFIG_HEADER([config.h])
#AC_CONFIG_HEADER([include/cli/config.h])

# Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_LANG(C++)

AC_PROG_INSTALL
AC_PROG_LIBTOOL

# check for doxygen
BB_ENABLE_DOXYGEN

# Checks for libraries.
AC_CHECK_LIB([dl], [dlopen])
AC_CHECK_LIB([cppunit], [main])
    
# set automake macro if CPPUNIT is present on system
AM_CONDITIONAL(CPPUNIT, test "$ac_cv_lib_cppunit_main" = yes)

# Checks for header files.

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST

# Checks for library functions.

AC_CONFIG_FILES([
    Makefile
    include/Makefile
    include/cli/Makefile
    src/Makefile
    test/Makefile
    doc/Makefile
    doc/Doxyfile
    examples/Makefile
])
AC_OUTPUT
