<?xml version="1.0" encoding="utf-8"?>
<executable class="registration">
  <Name>CLRegistration</name>
  <Description>Registers two images, writes the resampled moving image</description>
  <Parameters delimiter="">

    <!--
         CLRegistration -t 50 -x 3.4 /path/to/file/file.foo
         -->

    <Parameter required="false" flag="t" name="threshold">
      <Description>Threshold</Description>
      <Type>integer</Type>
      <Default>50</Default>
      <GUIHints>
        <Control>slider</Control>
        <Group>preprocessing</Group>
      </GUIHints>
      <Constraints>
        <Range minimum="0" maximum="100"/>
      </Constraints>
    </Parameter>

    <Parameter required="false" flag="x" name="xsigma">
      <Description>X Direction in sigma</Description>
      <Type>float</Type>
      <Default>1.0</Default>
      <Hints>
        <Control>slider</Control>
        <Group>preprocessing</Group>
      </Hints>
      <Constraints>
        <Range minimum="0.0" maximum="5.0"/>
      </Constraints>
    </Parameter>

    <Parameter required="false" flag="f" name="foo">
      <Description>Foo flag</Description>
      <Type>filename</Type>
    </Parameter>

    <Parameter required="true" order="0">
      <Description>Fixed image</Description>
      <Type>filename</Type>
      <Hints>
        <Control>fileselection</Control>
        <Group>io</Group>
      </Hints>
      <Constraints>
        <Direction>input</Direction>
        <Filetypes>
          <Filetype>ITK</Filetype>
          <Filetype>Slicerd</Filetype>
          <Filetype>MRML</Filetype>
        </Filetypes>
      </Constraints>
    </Parameter>

  </Parameters>
</executable>
