/* 
 * Here is where system computed values get stored.
 * These values should only change when the target compile platform changes.
 */

#if defined(WIN32) && !defined(VTKSLICER_STATIC)
#pragma warning ( disable : 4275 )
#endif

#cmakedefine CMAKE_WORDS_BIGENDIAN
#ifdef CMAKE_WORDS_BIGENDIAN
  #define WORDS_BIGENDIAN
#else
  #define WORDS_LITTLEENDIAN
#endif

#cmakedefine BUILD_SHARED_LIBS
#ifndef BUILD_SHARED_LIBS
#define VTKSLICER_STATIC
#endif

#cmakedefine BUILD_USING_NDIOAPI
#ifdef BUILD_USING_NDIOAPI
#define USE_NDIOAPI
#endif


#ifndef PERKLOG_DEBUG
#define PERKLOG_DEBUG( message ) \
  vtkSlicerApplication::GetInstance()->DebugMessage( message );
#endif

#ifndef PERKLOG_WARNING
#define PERKLOG_WARNING( message ) \
  vtkSlicerApplication::GetInstance()->WarningMessage( message );
#endif

#ifndef PERKLOG_ERROR
#define PERKLOG_ERROR( message ) \
  vtkSlicerApplication::GetInstance()->ErrorMessage( message );
#endif

#ifndef PERKLOG_INFO
#define PERKLOG_INFO( message ) \
  vtkSlicerApplication::GetInstance()->InformationMessage( message );
#endif

#ifndef PERKLOG
#define PERKLOG( level, message ) \
  if ( level == "debug" ) PERKLOG_DEBUG( message ); \
  if ( level == "warning" ) PERKLOG_WARNING( message ); \
  if ( level == "error" ) PERKLOG_ERROR( message ); \
  if ( level == "info" ) PERKLOG_INFO( message );
#endif

