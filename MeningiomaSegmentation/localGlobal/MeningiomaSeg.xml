  <parameters advanced="true">
    <label>Segmentation Parameters</label>
    <description>Parameters for meningioma segmentation</description>

    <integer>
      <name>numOfIteration</name>
      <longflag>numOfIteration</longflag>
      <flag>n</flag>
      <description>Max number of iteration</description>
      <label>Number of iteration</label>
      <default>10</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>1000</maximum>
        <step>10</step>
      </constraints>
    </integer>

    <double>
      <name>curvatureWeight</name>
      <longflag>curvatureWeight</longflag>
      <flag>c</flag>
      <description>Smoothness factor[0-1]</description>
      <label>Smoothness factor[0-1]</label>
      <default>0.9</default>
      <constraints>
        <minimum>0.0</minimum>
        <maximum>1.0</maximum>
        <step>0.1</step>
      </constraints>
    </double>

    <point coordinateSystem="ras" multiple="true">
      <name>seed</name>
      <label>Seeds</label>
      <longflag>--seed</longflag>
      <description>Seed point(s) for initial position</description>
      <default>100,100,10</default>
    </point>

